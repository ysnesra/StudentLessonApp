@model GetAllLessonQueryResponse

@{
    ViewData["Title"] = "AllLessons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="text-center mt-4">
        <h1>Choose Lesson</h1>
    </div>

    <div class="row">
        <div class="col-md-12">

            <table class="table table-bordered table-striped mt-4 table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <th></th>
                        <th>Course Name </th>
                        <th>Description </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lesson in Model.LessonListWithMessageDtos.LessonListDto)
                    {
                        <tr>
                            <td><input id="@lesson.Id" type="checkbox" /></td>
                            <td>@lesson.Name</td>
                            <td>@lesson.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <button type="button" class="btn btn-success pull-right"> Save </button>

        </div>
    </div>

</div>
