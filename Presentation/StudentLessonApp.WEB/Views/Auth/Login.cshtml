
@model LoginStudentDto

@{
    ViewData["Title"] = "Login Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h3 class="card-title text-center">@ViewData["Title"]</h3>
                    <hr />
                    <form asp-action="Login" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                        <div class="form-group mb-3">
                            <label asp-for="UserName" class="form-label"> Username : </label>
                            <input asp-for="UserName" class="form-control"  />
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"> Password : </label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="P@ssW0rd!" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="form-group d-grid mb-3">
                            <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-right-to-bracket me-2"></i>Login</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



